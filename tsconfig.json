{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "src/env.ts"],
}