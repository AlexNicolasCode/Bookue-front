{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/tests/*": [
        "../tests/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests",
    "pages"
  ],
  "exclude": [
    "node_modules",
    "src/env.ts"
  ]
}
